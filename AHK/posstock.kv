<CompanyListScreen>:
    BoxLayout:
        orientation: 'vertical'

        MDTopAppBar:
            title: "Companies"
            elevation: 10
            pos_hint: {"top": 1}
            right_action_items: [["plus", lambda x: root.open_add_company_dialog()]]

        RV:
            id: company_rv
            viewclass: 'TwoLineListItem'
            RecycleBoxLayout:
                default_size: None, dp(56)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'
                spacing: dp(2)
                padding: dp(2)

        MDSpinner:
            id: spinner
            size_hint: None, None
            size: dp(46), dp(46)
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            active: False

<AddCompanyContent>:
    orientation: 'vertical'
    spacing: dp(10)
    size_hint_y: None
    height: dp(120)

    MDTextField:
        id: comp_name
        hint_text: "Company Name"
        required: True
        helper_text: "Enter company name"
        helper_text_mode: "on_focus"
        size_hint_x: 1

    MDTextField:
        id: comp_details
        hint_text: "Company Details"
        required: False
        helper_text: "Enter company details"
        helper_text_mode: "on_focus"
        size_hint_x: 1

<RV@RecycleView>:
    viewclass: 'TwoLineListItem'
    RecycleBoxLayout:
        default_size: None, dp(56)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'
        spacing: dp(2)
        padding: dp(2)

BoxLayout:
    orientation: 'vertical'

    MDTopAppBar:
        title: "Test RecycleView"
        elevation: 10

    RV:
        id: company_rv

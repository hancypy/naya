<SignupScreen>:
    name: "signup"
    FitImage:
        source:"cr.png"
    MDCard:
        id: login_card
        size_hint: None, None
        size: dp(300), dp(550)
        radius: [dp(40)]
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        padding: dp(20)
        spacing: dp(20)
        md_bg_color: 1,1,1,0.9
        orientation: 'vertical'

        MDLabel:
            text: "Create Account"
            font_size: dp(30)
            halign: 'center'
            font_name: "3.ttf"
            color: 0.53, 0.52, 0.76, 1  # Converted to normalized RGB values

        MDTextField:
            id: email
            hint_text: "Enter your email"
            size_hint_x: 0.8
            font_size: dp(20)
            pos_hint: {"center_x": 0.5}
            validator: "email"
            helper_text: "user@gmail.com"

        MDTextField:
            id: password
            hint_text: "Enter your password"
            password: True
            font_size: dp(20)
            line_color_normal: 1,0,0,1
            hint_text_color_normal: 1,0,0,1
            size_hint_x: 0.8
            pos_hint: {"center_x": 0.5}

        MDRaisedButton:
            text: "Sign Up"
            font_size: dp(20)
            size_hint_x: 0.5
            pos_hint: {"center_x": 0.5}
            on_release: app.signup()

        MDFlatButton:
            text: "Already have an account?"
            font_size: dp(20)
            theme_text_color: "Custom"
            text_color: 0,0,0,1
            pos_hint: {"center_x": 0.5}
            on_release: app.go_to_login()
